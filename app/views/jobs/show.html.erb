<div class="row">
  <div class="jumbotron">
    <div class="container">
      <div class="col-md-6">

        <p style="color:grey">发布于<%= @job.release %></p>
        <h2>
          <%= @job.title %>
          <span class="wage_show">
            <%= @job.wage_lower_bound %>K
            -
            <%= @job.wage_upper_bound %>K</span>
        </h2>
        <p><%= @job.city.try(:name) %>
          |
          <%= @job.job_experience %>
          |
          <%= @job.education_background %></p>
        <em class="skill_show"><%= @job.skill %></em>

      </div>

      <div class="col-md-4">
        <h3>
          <a href="<%= @job.source %>"><%= @job.company %></a>

        </h3>
        <p><%= @job.industry %>
          |
          <%= @job.financing_stage %>
          |
          <%= @job.scale %></p>
        <p><%= t(@job.status, :scope => "job.status") %></p>
        <!-- <p><%= @job.job_category%></p> -->
      </div>
    </div>
    <div class="col-md-2 pull-right">
      <div class="company">
        <% if @job.logo.present? %>
        <%= link_to image_tag(@job.logo.url(:thumb)), @job.source, :target => "_blank" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="content_job">
    <div class="container">
      <div class="row">

        <h3>工作内容：</h3>
        <p><%= simple_format(@job.description) %></p>
        <p>创建于<%= @job.created_at.to_s %></p>
      </div>
    </div>
  </div>
</div>
