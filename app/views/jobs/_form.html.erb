<%= simple_form_for @job do |f| %>

<%= f.input :title  %>
<%= f.input :wage_lower_bound %>
<%= f.input :wage_upper_bound %>
<div class="form-group">
  <%= f.label :release %>
  <%= f.text_field :release, :class => "form-control" %>
</div>
<%= f.input :skill %>
<%= f.input :company %>
<%= f.input :industry %>
<%= f.input :source %>
<p><%= f.association :city %></p>
<!-- <%= f.input :contact_email %> -->

<div class="form-group">
  <p>技能标签：</p>

<%= f.nested_fields_for :tickets do |ff| %>

  <%= ff.text_field :name, :class => "form-control" %>
<%= ff.remove_nested_fields_link "移除", :class => "btn btn-danger" %>
  <%= f.add_nested_fields_link :tickets, "新增", :class => "btn btn-default" %>
<% end %>

</div>

<br>
<%= f.label :scale %>：
<div class="btn-group">
  <% Job::SCALE.each do |scale| %>
  <label class="btn btn-default">
    <%= f.radio_button :scale, scale %>
    <%= scale %>
  </label>
  <% end %>
</div>
<br>
<br>
<%= f.label :status %>
<div class="btn-group">
  <% Job::STATUS.each do |status| %>
  <label class="btn btn-default">
    <%= f.radio_button :status, status %>
    <%= t(status, :scope => "job.status") %>
  </label>
  <% end %>
</div>
  <br>
  <br>
<%= f.label :job_experience %>：
<div class="btn-group">
  <% Job::JOB_EXPERIENCE.each do |job_experience| %>
  <label class="btn btn-default">
    <%= f.radio_button :job_experience, job_experience %>
    <%= job_experience %>
  </label>
  <% end %>
</div>

<br>
<br>
<%= f.label :financing_stage %>：
<div class="btn-group">
<% Job::FINANCING_STAGE.each do |financing_stage| %>
<label class="btn btn-default">
  <%= f.radio_button :financing_stage, financing_stage %>
  <%= financing_stage %>
</label>
<% end %>
</div>

<br>
<br>
<%= f.label :education_background %>：
<div class="btn-group">
<% Job::EDUCATION_BACKGROUND.each do |education_background| %>
<label class="btn btn-default">
  <%= f.radio_button :education_background, education_background %>
  <%= education_background %>
</label>
<% end %>
</div>



<hr>
<%= f.input :description, as: :ckeditor %>
<%= f.input :is_hidden %>

<%= f.submit "Submit" %>
<% end %>



<script>
  $("#job_city_id").select2( { theme: "bootstrap"} );
  $("#job_release").datepicker({ format: "yyyy-mm-dd"});
</script>
