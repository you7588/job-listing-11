<%= simple_form_for [:admin, @job ] do |f| %>

<%= f.input :title  %>

<div class="form-group">
  <%= f.label :logo %>
  <%= f.file_field :logo, :class => "form-control" %>
  <% if f.object.logo.present? %>
    <label>
      <%= f.check_box :remove_logo %>删除图档
    </label>
    <%= link_to f.object.logo.filename, f.object.logo.url, :target => "_blank" %>
    <% end %>
</div>

<%= f.input :wage_lower_bound %>
<%= f.input :wage_upper_bound %>
<div class="form-group">
  <%= f.label :release %>
  <%= f.date_select :release, :class => "form-control" %>
</div>
<%= f.input :skill %>
<%= f.input :company %>
<%= f.input :industry %>
<%= f.input :source %>
<p><%= f.association :city %></p>
<!-- <%= f.input :contact_email %> -->
<br>
<%= f.label :scale %>：
<div class="btn-group">
  <% Job::SCALE.each do |scale| %>
  <label class="btn btn-default">
    <%= f.radio_button :scale, scale %>
    <%= scale %>
  </label>
  <% end %>
</div>
<br>
<br>
<%= f.label :status %>
<div class="btn-group">
  <% Job::STATUS.each do |status| %>
  <label class="btn btn-default">
    <%= f.radio_button :status, status %>
    <%= t(status, :scope => "job.status") %>
  </label>
  <% end %>
</div>
  <br>
  <br>
<%= f.label :job_experience %>：
<div class="btn-group">
  <% Job::JOB_EXPERIENCE.each do |job_experience| %>
  <label class="btn btn-default">
    <%= f.radio_button :job_experience, job_experience %>
    <%= job_experience %>
  </label>
  <% end %>
</div>

<br>
<br>
<%= f.label :financing_stage %>：
<div class="btn-group">
<% Job::FINANCING_STAGE.each do |financing_stage| %>
<label class="btn btn-default">
  <%= f.radio_button :financing_stage, financing_stage %>
  <%= financing_stage %>
</label>
<% end %>
</div>

<br>
<br>
<%= f.label :education_background %>：
<div class="btn-group">
<% Job::EDUCATION_BACKGROUND.each do |education_background| %>
<label class="btn btn-default">
  <%= f.radio_button :education_background, education_background %>
  <%= education_background %>
</label>
<% end %>
</div>

<hr>
<%= f.input :description, as: :ckeditor %>
<%= f.input :is_hidden %>

<%= f.submit "Submit" %>
<% end %>


<script>
  $("#job_city_id").select2( { theme: "bootstrap"} );
</script>
