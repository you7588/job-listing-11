<%= simple_form_for [:admin, @job ] do |f| %>

<%= f.input :title, :label => "职位" %>
<%= f.input :wage_lower_bound, :label => "薪资下限" %>
<%= f.input :wage_upper_bound, :label => "薪资上限" %>
<%= f.input :job_experience, :label => "工作经验" %>
<%= f.input :education_background, :label => "学历要求" %>
<%= f.input :skill, :label => "技能要求" %>
<%= f.input :company, :label => "公司名" %>
<%= f.input :financing_stage, :label => "融资阶段" %>
<%= f.input :industry, :label => "行业领域" %>
<%= f.input :job_category, :label => "工作性质" %>
<%= f.input :source, :label => "来源（网址）" %>
<%= f.input :place, :label => "城市" %>
<%= f.input :scale, :label => "公司规模" %>
<%= f.input :contact_email, :label => "联系方式" %>
<hr>
<%= f.input :description, :label => "内容（职位描述、团队介绍、工作地址）" %>
<%= f.input :is_hidden, :label => "隐藏" %>

  <%= f.submit "Submit" %>
<% end %>
